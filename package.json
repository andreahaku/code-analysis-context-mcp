{
  "name": "code-analysis-context-mcp",
  "version": "0.1.0",
  "description": "MCP server for deep codebase analysis, pattern detection, and AI-optimized context generation for React, React Native, Vue 3, and Nuxt 3 projects",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "code-analysis-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "code-analysis",
    "context-engineering",
    "architecture",
    "react",
    "react-native",
    "vue",
    "nuxt",
    "ast",
    "dependency-graph",
    "pattern-detection",
    "ai-context"
  ],
  "author": "Claude (Anthropic)",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@babel/parser": "^7.23.9",
    "@vue/compiler-sfc": "^3.4.15",
    "vue-eslint-parser": "^9.4.2",
    "fast-glob": "^3.3.2",
    "acorn": "^8.11.3",
    "ts-morph": "^21.0.1",
    "jscodeshift": "^0.15.1",
    "graphlib": "^2.1.8",
    "madge": "^6.1.0",
    "dependency-cruiser": "^16.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "@types/graphlib": "^2.1.12",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.12",
    "ts-node": "^10.9.2",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
